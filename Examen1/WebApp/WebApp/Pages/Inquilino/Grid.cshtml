@page
@model WebApp.Pages.Inquilino.GridModel
@{
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Inquilino
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-hover table table-bordered table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Descripción</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Id_TipoInquilino</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Estado</td>
                                    <td>
                                        <button type="button" class="btn btn-danger" onclick="InquilinoGrid.OnClickEliminar(@item.Id_TipoInquilino)"><i class='bx bx-trash'></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Inquilino/Grid.js"></script>
}